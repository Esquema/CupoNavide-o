<div class="student-table">
  <table>
    <thead>
      <tr>
        <th>Nombre del estudiante</th>
        <th>Estado</th>
        <th>Fecha de pago</th>
      </tr>
    </thead>
    <tbody>
      {students.map((student) => (
        <tr class={student.hasPaid ? 'paid' : 'unpaid'}>
          <td>{student.name}</td>
